<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/image_holder">

    <ImageView
        android:id="@+id/galley_image"
        android:layout_width="@dimen/gallery_small_size"
        android:layout_height="@dimen/gallery_small_size"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/avatars" />

    <View
        android:id="@+id/select_indicator"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/galley_image"
        android:layout_marginStart="-50dp"
        android:layout_marginTop="-50dp"
        android:layout_toEndOf="@id/galley_image"
        android:background="@drawable/item_selectiom_indicator"
        android:visibility="gone" />

</RelativeLayout>