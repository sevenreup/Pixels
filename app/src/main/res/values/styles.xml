<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.navigationItems">
        <item name="bt_colorActive">@color/colorAccent</item>
        <item name="bt_badgeBackgroundColor">@android:color/transparent</item>
        <item name="bt_shapeColor">@color/colorPrimary</item>
    </style>
    <style name="AppTheme.EditText">
        <item name="android:background">@drawable/wig_textbox_man</item>
        <item name="android:padding">@dimen/standard_spacing</item>
        <item name="android:layout_marginBottom">@dimen/standard_spacing</item>
    </style>
</resources>
